print("""
       ==========Menu============
      
      1 - Depositar
      2 - sacar 
      0 - Sair

        Obrigado por usar nosso banco!
        """)


saldo = 2500.00
limite = 1000.00
extrato = ""
limite_saque = 3
saques_realizados = 0

def menu(): # Função para exibir o menu e obter a opção do usuário
    
    while True:
        try:
            opcao = int(input("Escolha uma opção: "))
            if opcao in [0, 1, 2]:
                return opcao
            else:
                print("Opção inválida! Tente novamente.")
        except ValueError:
            print("Entrada inválida! Por favor, insira um número.")


def depositar(saldo, valor): # Função para depositar um valor na conta
    if valor > 0:
        saldo += valor
        print(f"Depósito de R$ {valor:.2f} realizado com sucesso!")
    else:
        print("Valor inválido para depósito.")
    return saldo



opcao = menu() # Chama a função menu para obter a opção do usuário

if opcao == 1: # Se a opção for 1, chama a função depositar
    valor = float(input("Digite o valor a ser depositado: "))
    saldo = depositar(saldo, valor)
    print(f"Seu novo saldo é: R$ {saldo:.2f}")

elif opcao == 2: # Se a opção for 2, realiza o saque
    valor = float(input("Digite o valor a ser sacado: "))
    if valor > saldo:
        print("Saldo insuficiente!")
    elif valor > limite:
        print("Valor acima do limite de saque!")
    else:
        saldo -= valor
        print(f"Saque de R$ {valor:.2f} realizado com sucesso!")
        print(f"Seu novo saldo é: R$ {saldo:.2f}")
elif opcao == 0:
    print("Obrigado por usar nosso banco! Até logo!")
